<window id="wdwVCargo" apply="controlador.maestros.CCargo"
	border="normal" height="auto" style="background-color:#8A0808;" width="100%">
	<groupbox width="auto" mold="3d" title="Cargo">
		<separator />
		<div id="botoneraCargo" />
		<separator />
		<separator />
		<groupbox id="gpxRegistroCargo" width="auto" title="" class = "azul"
			open="false">
			<caption label="Nuevo" style="font-weight:bold; font-size: 13px"
				tooltiptext="Presione para registrar un nuevo cargo" />
			<separator />
			<grid width="100%">
				<columns visible="false">
					<column label="" width="20%" />
					<column label="" width="55%" />
					<column label="" width="25%" />
				</columns>
				<rows>
					<row>
						<hbox>
							<label value="Descripción:"
								class="etiqueta" />
							<space />
							<label value="*"
								style="font-weight:bold;color:red">
							</label>
						</hbox>

						<textbox id="txtDescripcionCargo" width="60%"
							maxlength="100" tabindex="1"
							tooltiptext="Ingrese aqui la descripcion del cargo" />
							<hbox />
							<hbox />
					</row>
					<row>
						<label value="Nómina:" class="etiqueta" />

						<textbox id="txtNominaCargo" width="60%"
							maxlength="50" tabindex="2"
							tooltiptext="Ingrese aqui la nomina del cargo" />
							<hbox />
							<hbox />
					</row>
					<row>
						<label value="Cargo Auxiliar:" class="etiqueta" />

						<textbox id="txtCargoAuxiliarCargo" width="60%"
							maxlength="50" tabindex="3"
							tooltiptext="Ingrese aqui el cargo auxiliar" />
							<hbox />
							<hbox />
					</row>
					<row>
						<label value="Empresa Auxiliar:"
							class="etiqueta" />

						<textbox id="txtEmpresaAuxiliarCargo"
							width="60%" maxlength="50" tabindex="4"
							tooltiptext="Ingrese aqui el nombre de la empresa auxiliar" />
							<hbox />
							<hbox />
					</row>
				</rows>
			</grid>
		</groupbox>
		<separator />
		<separator />
		<groupbox id="gpxDatosCargo" width="auto" title="" class ="azul">
			<caption label="Registros" style="font-weight:bold; font-size: 13px"
				tooltiptext="Presione para visualizar los cargos registrados" />
			<div id="catalogoCargo"
				tooltiptext="Seleccione el cargo para realizar una accion" />
		</groupbox>
		<separator />
		<separator />
	</groupbox>
</window>